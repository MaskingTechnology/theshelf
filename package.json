{
  "name": "theshelf",
  "private": true,
  "version": "0.4.1",
  "type": "module",
  "scripts": {
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces --if-present",
    "review": "npm run review --workspaces",
    "publish": "npm publish --workspaces --access=public",
    "version": "npm version $VERSION --no-git-tag-version --workspaces --include-workspace-root=true"
  },
  "workspaces": [
    "packages/logging/core",
    "packages/caching/core",
    "packages/authentication/core",
    "packages/database/core",
    "packages/eventbroker/core",
    "packages/filestore/core",
    "packages/http/core",
    "packages/notification/core",
    "packages/validation/core",
    "packages/connection",
    "packages/authentication/drivers/openid",
    "packages/database/drivers/mongodb",
    "packages/filestore/drivers/s3",
    "packages/logging/drivers/database",
    "packages/notification/drivers/webpush",
    "packages/validation/drivers/zod"
  ],
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/node": "24.10.4",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "^9.39.2",
    "eslint-plugin-sonarjs": "3.0.6",
    "rimraf": "6.1.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vitest": "4.0.18"
  }
}
